{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true,
    "types": [
      "bun-types", // add Bun global
      "@types/jsdom"
    ]
  }
}
