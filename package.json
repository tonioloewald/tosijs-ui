{
  "name": "xinjs-ui",
  "version": "0.9.15",
  "description": "simple robust web-components for use with xinjs or anything else",
  "scripts": {
    "start": "bun --watch bin/dev.ts",
    "format": "bun eslint src demo --fix && bun prettier --write .",
    "tests": "bun test && bun playwright test",
    "latest": "rm -rf node_modules && bun update"
  },
  "keywords": [
    "xinjs",
    "ui",
    "ux",
    "user interface",
    "gui",
    "widgets",
    "web-components",
    "component library"
  ],
  "author": "Tonio Loewald",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tonioloewald/xinjs-ui.git"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.3",
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "bun-types": "latest",
    "caniuse-lite": "^1.0.30001727",
    "chokidar": "^4.0.3",
    "eslint": "^8.57.1",
    "prettier": "^2.8.8",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "marked": "^16.0.0",
    "xinjs": "^0.8.8"
  },
  "files": [
    "/dist",
    "/LICENSE",
    "/README.md"
  ],
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "browser": "./dist/iife.js",
    "default": "./dist/index.js",
    "types": "./dist/index.d.ts"
  }
}
