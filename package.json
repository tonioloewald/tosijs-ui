{
  "name": "xinjs-ui",
  "version": "0.6.1",
  "description": "simple robust web-components for use with xinjs or anything else",
  "main": "dist/index.js",
  "types": "dist/types.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "start": "bun pack && rm -rf www && bun parcel demo/index.html --dist-dir www -p 8787",
    "pack": "bun prebuild && bun format && bun test && rm -rf docs && bun parcel build --public-url . && cp demo/CNAME docs && cp demo/robots.txt docs",
    "prebuild": "bun docs.js && bun icons.js",
    "format": "bun eslint src demo --fix && bun prettier --write .",
    "test": "bun test",
    "latest": "rm -rf .parcel-cache && rm -rf node_modules && npm install && bun install"
  },
  "keywords": [
    "xinjs",
    "ui",
    "ux",
    "user interface",
    "gui",
    "widgets",
    "web-components",
    "component library"
  ],
  "author": "Tonio Loewald",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tonioloewald/xinjs-polygons.git"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.9.3",
    "@parcel/transformer-typescript-types": "^2.9.3",
    "@types/jsdom": "^21.1.1",
    "@types/marked": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "bun-types": "latest",
    "eslint": "^8.47.0",
    "parcel": "2.9.3",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "marked": "^5.1.0",
    "xinjs": "^0.5.9"
  },
  "files": [
    "/dist",
    "/LICENSE",
    "/README.md"
  ],
  "type": "module",
  "targets": {
    "docs": {
      "context": "browser",
      "distDir": "docs",
      "source": "demo/index.html",
      "isLibrary": false,
      "optimize": true
    },
    "dist": {
      "context": "browser",
      "isLibrary": true,
      "distDir": "dist",
      "includeNodeModules": false,
      "outputFormat": "esmodule"
    }
  }
}
