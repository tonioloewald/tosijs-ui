{
  "name": "xinjs-ui",
  "version": "0.2.9",
  "description": "simple robust web-components for use with xinjs or anything else",
  "main": "dist/index.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "start": "rm -rf www && bun docs.js && bun parcel demo/index.html --dist-dir www -p 8787",
    "build": "bun docs.js && bun format && bun test && rm -rf docs && bun parcel build --public-url .",
    "docs": "bun docs.js",
    "format": "bun prettier --write .",
    "test": "bun test",
    "update": "npm install && bun install"
  },
  "keywords": [
    "xinjs",
    "ui",
    "ux",
    "user interface",
    "gui",
    "widgets",
    "web-components",
    "component library"
  ],
  "author": "Tonio Loewald",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tonioloewald/xinjs-polygons.git"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.9.3",
    "@parcel/transformer-typescript-types": "^2.9.3",
    "bun-types": "latest",
    "parcel": "latest",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "xinjs": "^0.5.0",
    "marked": "^5.1.0"
  },
  "files": [
    "/cdn",
    "/dist",
    "/LICENSE",
    "/README.md"
  ],
  "type": "module",
  "targets": {
    "docs": {
      "context": "browser",
      "distDir": "docs",
      "source": "demo/index.html",
      "isLibrary": false,
      "optimize": true
    },
    "dist": {
      "context": "browser",
      "source": "src/index.ts",
      "isLibrary": true,
      "distDir": "dist",
      "includeNodeModules": false,
      "outputFormat": "esmodule"
    },
    "cdn": {
      "context": "browser",
      "source": "src/index.ts",
      "distDir": "cdn",
      "optimize": true,
      "isLibrary": true,
      "includeNodeModules": false,
      "outputFormat": "esmodule"
    }
  }
}
